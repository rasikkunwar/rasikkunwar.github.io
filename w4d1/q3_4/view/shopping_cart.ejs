<%- include('header.ejs')%>
<div id="shopping_cart">
    <table>
        <caption>Shopping Cart Lists</caption>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Quantity</th>
        </tr>
        <% 
        if(cartLists){
        cartLists.forEach(item => { %>
        <tr>
          <td><%= item.name%></td>
          <td><%= item.price%></td>
          <td><%= item.quantity%></td>
        </tr>
        <% 
      })
    }
      else{ %>
        <tr>
          <td colspan="3">Cart is empty</td>
          </tr>
      <%
    }
     %>
      </table>
</div>
<%- include('footer.ejs')%>
